# Database Connection (Supabase)
DATABASE_URL="your_database_url_here"
DIRECT_URL="your_direct_url_here"

# NextAuth
NEXTAUTH_SECRET="your_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Midtrans Payment Gateway
# Sandbox: Get from https://dashboard.sandbox.midtrans.com (SB-Mid-xxx prefix)
# Production: Get from https://dashboard.midtrans.com (Mid-xxx prefix)
MIDTRANS_MERCHANT_ID="your_merchant_id"
MIDTRANS_SERVER_KEY="Mid-server-xxx or SB-Mid-server-xxx"
MIDTRANS_CLIENT_KEY="Mid-client-xxx or SB-Mid-client-xxx"
MIDTRANS_IS_PRODUCTION="false"

# Public Environment Variables (also add to .env.local)
NEXT_PUBLIC_MIDTRANS_CLIENT_KEY="Mid-client-xxx or SB-Mid-client-xxx"
NEXT_PUBLIC_MIDTRANS_IS_PRODUCTION="false"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
